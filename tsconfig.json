{
  "compilerOptions": {
    "target": "ES2023",
    "module": "ESNext",
    "lib": ["ES2023"],
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitAny": false,
    "strictNullChecks": false
  },
  "include": [
    "orchestration/**/*.mjs",
    "tests/**/*.mjs",
    "mcp/**/*.mjs",
    "scripts/**/*.mjs",
    "tests/**/*.ts",
    "*.config.ts"
  ],
  "exclude": ["node_modules", "dist", "runs", "test-results"]
}
