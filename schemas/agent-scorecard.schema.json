{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "schemas/agent-scorecard.schema.json",
  "title": "AgentScorecard",
  "type": "object",
  "required": ["agent_id", "ts", "results", "summary"],
  "properties": {
    "agent_id": { "type": "string" },
    "ts": { "type": "number" },
    "results": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["task_id", "capability", "score", "ok"],
        "properties": {
          "task_id": { "type": "string" },
          "capability": { "type": "string" },
          "score": { "type": "number", "minimum": 0, "maximum": 1 },
          "ok": { "type": "boolean" },
          "violations": { "type": "array", "items": { "type": "string" } },
          "duration_ms": { "type": "integer", "minimum": 0 },
          "budget_usd": { "type": "number", "minimum": 0 }
        },
        "additionalProperties": false
      },
      "minItems": 1
    },
    "summary": {
      "type": "object",
      "required": ["avg_score", "by_capability"],
      "properties": {
        "avg_score": { "type": "number", "minimum": 0, "maximum": 1 },
        "by_capability": {
          "type": "object",
          "additionalProperties": { "type": "number", "minimum": 0, "maximum": 1 }
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
