{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://swarm1.io/schemas/insights.schema.json",
  "title": "Data Insights",
  "description": "Schema for validating data insights output",
  "type": "object",
  "required": ["version", "metrics", "generated_at", "data_row_count"],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^1\\.0(\\.\\d+)?$",
      "description": "Schema version"
    },
    "generated_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of when insights were generated"
    },
    "data_row_count": {
      "type": "integer",
      "minimum": 1,
      "description": "Number of data rows processed"
    },
    "source_manifest": {
      "type": "array",
      "description": "List of source files with checksums",
      "items": {
        "type": "object",
        "required": ["path", "sha256"],
        "properties": {
          "path": {
            "type": "string",
            "description": "Relative path to source file"
          },
          "sha256": {
            "type": "string",
            "pattern": "^[a-f0-9]{64}$",
            "description": "SHA-256 checksum of the file"
          },
          "size": {
            "type": "integer",
            "minimum": 0,
            "description": "File size in bytes"
          }
        }
      }
    },
    "metrics": {
      "type": "array",
      "minItems": 1,
      "description": "Computed metrics from the data",
      "items": {
        "type": "object",
        "required": ["id", "value"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique metric identifier"
          },
          "label": {
            "type": "string",
            "description": "Human-readable metric label"
          },
          "value": {
            "type": ["number", "string", "boolean"],
            "description": "Metric value"
          },
          "unit": {
            "type": "string",
            "description": "Unit of measurement"
          },
          "category": {
            "type": "string",
            "description": "Metric category for grouping"
          }
        }
      }
    },
    "dimensions": {
      "type": "array",
      "description": "Data dimensions analyzed",
      "items": {
        "type": "string"
      }
    },
    "findings": {
      "type": "array",
      "description": "Key findings or insights",
      "items": {
        "type": "string"
      }
    },
    "aggregations": {
      "type": "object",
      "description": "Aggregated data summaries",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "count": {
            "type": "integer",
            "minimum": 0
          },
          "sum": {
            "type": "number"
          },
          "mean": {
            "type": "number"
          },
          "min": {
            "type": "number"
          },
          "max": {
            "type": "number"
          }
        }
      }
    }
  },
  "additionalProperties": false
}
