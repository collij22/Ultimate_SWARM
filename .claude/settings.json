{
  "hooks": {
    "SessionStart": [
      { "hooks": [ { "type": "command", "command": "python scripts/hooks/session_start.py" } ] }
    ],
    "PreToolUse": [
      { "matcher": "*", "hooks": [ { "type": "command", "command": "python scripts/hooks/pre_tool.py" } ] }
    ],
    "PostToolUse": [
      { "matcher": "*", "hooks": [ { "type": "command", "command": "python scripts/hooks/post_tool.py" } ] }
    ],
    "SubagentStop": [
      { "hooks": [ { "type": "command", "command": "python scripts/hooks/subagent_stop.py" } ] }
    ],
    "SessionEnd": [
      { "hooks": [ { "type": "command", "command": "python scripts/hooks/session_end.py" } ] }
    ]
  },

  "permissions": {
    "allow": [ "Read(./**)" ],
    "deny": [
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)"
    ],
    "ask": []
  }
}
