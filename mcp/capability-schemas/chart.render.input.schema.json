{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "capability://chart.render.input@v1",
  "title": "chart.render input",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "charts": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "id": { "type": "string" },
          "type": { "type": "string", "enum": ["bar", "line", "pie", "doughnut"] },
          "width": { "type": "integer", "minimum": 100 },
          "height": { "type": "integer", "minimum": 100 },
          "data": {
            "type": "object",
            "properties": {
              "labels": { "type": "array", "items": { "type": ["string", "number"] } },
              "datasets": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "label": { "type": "string" },
                    "data": { "type": "array", "items": { "type": "number" } },
                    "backgroundColor": { "type": ["string", "array"] }
                  },
                  "required": ["data"]
                }
              }
            },
            "required": ["labels", "datasets"]
          },
          "options": { "type": "object" }
        },
        "required": ["id", "type", "width", "height", "data"]
      }
    },
    "outDir": { "type": "string", "default": "charts" }
  },
  "required": ["charts"]
}


