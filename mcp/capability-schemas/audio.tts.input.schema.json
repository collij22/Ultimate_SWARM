{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "capability://audio.tts.input@v1",
  "title": "audio.tts input",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "text": { "type": "string", "minLength": 1 },
    "voice": { "type": "string", "default": "en_US-amy-medium" },
    "rate": { "type": "number", "minimum": 0.5, "maximum": 2, "default": 1 },
    "pitch": { "type": "number", "minimum": -12, "maximum": 12, "default": 0 },
    "out": { "type": "string", "default": "media/narration.wav" }
  },
  "required": ["text"]
}


