{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "capability://video.compose.input@v1",
  "title": "video.compose input",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "slides": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "image": { "type": "string" },
          "duration_sec": { "type": "number", "minimum": 0.1 },
          "caption": { "type": ["string", "null"] }
        },
        "required": ["image", "duration_sec"]
      }
    },
    "audio": { "type": "string" },
    "out": { "type": "string", "default": "media/final.mp4" },
    "width": { "type": "integer", "minimum": 320, "default": 1280 },
    "height": { "type": "integer", "minimum": 240, "default": 720 }
  },
  "required": ["slides"]
}


