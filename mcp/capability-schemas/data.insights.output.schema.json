{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "capability://data.insights.output@v1",
  "title": "data.insights output",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "summary": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "row_count": { "type": "integer", "minimum": 0 },
        "column_count": { "type": "integer", "minimum": 0 }
      },
      "required": ["row_count", "column_count"]
    },
    "metrics": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "name": { "type": "string" },
          "value": { "type": ["number", "string"] }
        },
        "required": ["name", "value"]
      }
    },
    "segments": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "label": { "type": "string" },
          "count": { "type": "integer", "minimum": 0 }
        },
        "required": ["label", "count"]
      }
    }
  },
  "required": ["summary"],
  "definitions": {}
}


