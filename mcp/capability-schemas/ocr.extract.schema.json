{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "OCR Extract Schema",
  "description": "Input/output schemas for OCR text extraction",
  "definitions": {
    "input": {
      "type": "object",
      "properties": {
        "image_path": {
          "description": "Path to image file for OCR",
          "type": "string"
        },
        "image_url": {
          "description": "URL of image to download and process",
          "type": "string",
          "format": "uri"
        },
        "languages": {
          "description": "Languages to detect (Tesseract language codes)",
          "type": "array",
          "items": { "type": "string" },
          "default": ["eng"]
        },
        "preprocessing": {
          "description": "Image preprocessing options",
          "type": "object",
          "properties": {
            "deskew": { "type": "boolean", "default": false },
            "denoise": { "type": "boolean", "default": false },
            "enhance_contrast": { "type": "boolean", "default": false }
          },
          "additionalProperties": false
        },
        "output_format": {
          "description": "Output format for extracted text",
          "type": "string",
          "enum": ["text", "json", "hocr"],
          "default": "json"
        }
      },
      "oneOf": [
        { "required": ["image_path"] },
        { "required": ["image_url"] }
      ],
      "additionalProperties": false
    },
    "output": {
      "type": "object",
      "properties": {
        "text": {
          "description": "Extracted text content",
          "type": "string"
        },
        "blocks": {
          "description": "Text blocks with bounding boxes",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "text": { "type": "string" },
              "confidence": { "type": "number", "minimum": 0, "maximum": 100 },
              "bbox": {
                "type": "object",
                "properties": {
                  "x": { "type": "integer" },
                  "y": { "type": "integer" },
                  "width": { "type": "integer" },
                  "height": { "type": "integer" }
                },
                "required": ["x", "y", "width", "height"]
              }
            },
            "required": ["text", "confidence", "bbox"]
          }
        },
        "overall_confidence": {
          "description": "Overall OCR confidence score",
          "type": "number",
          "minimum": 0,
          "maximum": 100
        },
        "language": {
          "description": "Detected primary language",
          "type": "string"
        },
        "word_count": {
          "type": "integer"
        }
      },
      "required": ["text", "overall_confidence"],
      "additionalProperties": false
    }
  }
}